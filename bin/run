#!/bin/bash

basename=`dirname $0`

if [ "${IMAGE_FLAVOR}" == 'backend' ] ; then

  ${basename}/initdb
  cd packages/backend-api
  exec node ./server.js
fi

if [ "${IMAGE_FLAVOR}" == 'frontend' ] ; then
  cd packages/frontend-web
  exec node tooling/server.js
fi

echo "Unknown image flavor ${IMAGE_FLAVOR}"
exit 1
